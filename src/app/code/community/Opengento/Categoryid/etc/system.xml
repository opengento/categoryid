<config>
    <tabs translate="label" module="opengento_categoryid">
        <opengento_categoryid>
            <label>Category Tree ID</label>
            <sort_order>100</sort_order>
        </opengento_categoryid>
    </tabs>
    <sections>
        <opengento_categoryid translate="label comment" module="opengento_categoryid">
            <label>Configuration</label>
            <tab>opengento_categoryid</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <configuration translate="label comment">
                    <label>Settings</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled>
                            <label>Show category ID in tree</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                    </fields>
                </configuration>
            </groups>
        </opengento_categoryid>
    </sections>
</config>
